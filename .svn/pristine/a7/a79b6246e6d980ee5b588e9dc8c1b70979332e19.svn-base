<meta charset="UTF-8">
<script type="text/javascript" src="driverSchool/driverSchoolAd.js"></script>
<div style="height: 30px; width: 100%; background-color: #DEEBF7">
	<h2 align="center">驾校广告信息管理(服务器端才有的权限)</h2>
</div>
<div id="_adSchoolNameDIV"
	style="min-height: 30px; width: 100%; float: center; background-color: #DDDDDD">
	<button id="newAd" onclick="add()" class="_btn" style="float: bottom">新增</button>
</div>
<div id="adMsg" align="center" style="float: bottom">
	<form id="form1" enctype='multipart/form-data' action="" method="post" onsubmit="return valid()" target="iframe">
		<input id="schoolAccount" name='schoolAccount' size='25' hidden="true"> 
		<input id="schoolAccount1" name='schoolAccount1' size='25' hidden="true"> 
		<span style="font-weight: bold" id="addName" hidden="true">驾校账号：</span>
		<input id="id" name='id' size='25' hidden="true">
		<table id='tab' hidden="true">
			<tr>
				<td style="font-weight: bold;" colspan='2'>
					标题: 
				</td>
				<td style="float: left;">
					<input type="text" id="title" name='title'>
				</td>
				<td>
				</td>
			</tr>
			<tr>
				<td>
					<span style="font-weight: bold; float: left;">图片</span>
				</td>
				<td colspan='1'>
					<img id='pic' height='200' alt="go" src="" width="80%" />
				</td>
				<td>
					<input type="file"  id="pic1" name='pic1' value='更新图片'>
				</td>
			</tr>
			<tr>
				<td>
					<span style="font-weight: bold; float: left;">内容</span>(根据驾校的要求填写)
				</td>
				<td>
					<textarea id="content" name='content' rows="10" cols="100" style="float: left"></textarea>
				</td>
				<td></td>
			</tr>
			<tr>
				<td></td>
				<td>
					<input id="save" type='submit' value='保存'>
				</td>
				<td align="left">
				</td>
			</tr>
		</table>
	</form>
	<button class='_but' onclick='delAd()'>删除</button>
</div>
<iframe name='iframe' hidden="true"></iframe>