<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">      
<mapper namespace="ssm.orm.user.UserDao">
	<!-- 
	 * 根据 用户名 和 密码 查询用户信息
	 * @author liaoyun
	 * 2016-3-18
	 -->
	<select id="findUser" resultType="ssm.entity.user.UserO">
		select
			t.account      as account,
			t.tel          as tel,
			t.email        as email,
			t.qq           as qq,
			t.weChat       as weChat,
			t.leader       as leader,
			t.type         as type,
			t.nickName     as nickName,
			t.creationDate as createdDate
		from
			user_t t
		where
			t.account=#{0} and t.password=#{1}
	</select>
	<!-- 
	 * 分页查询所有的用户 的数量 
	 * liaoyun 2016-3-26
	 * @param userO
	 -->
	<select id="findTotalUser" resultType="int">
		select
			count(id)
		from
			user_t
		where
			1=1
			<if test="account != null and account != ''">
				and account = #{account}
			</if>
			<if test="tel != null and tel != ''">
				and tel = #{tel}
			</if>
			<if test="email != null and email !=''">
				and email = #{email}
			</if>
			<if test="qq != null and qq !=''">
				and qq = #{qq}
			</if>
			<if test="weChat != null and weChat !=''">
				and weChat = #{weChat}
			</if>
			<if test="type != null and type !=''">
				and type = #{type}
			</if>
			<if test="nickName != null and nickName != ''">
				and nickName = #{nickName}
			</if>
	</select>
	<!-- 
	 * 分页查询所有的用户 liaoyun 2016-3-26
	 * @param userO
	 * @param start
	 * @param pageSize
	 -->
	<select id="findAllUser" resultType="ssm.entity.user.UserO">
		select 
			t.id       as id, 
			t.account  as account,
			t.tel	   as tel,
			t.email    as email,
			t.qq       as qq,
			t.weChat   as weChat,
			t.leader   as leader,
			t.type     as type,
			t.nickName as nickName
		from
			user_t t
		where 
			1=1
			<if test="param1.account != null and param1.account != ''">
				and t.account = #{param1.account}
			</if>
			<if test="param1.tel != null and param1.tel != ''">
				and t.tel = #{param1.tel}
			</if>
			<if test="param1.email != null and param1.email !=''">
				and t.email = #{param1.email}
			</if>
			<if test="param1.qq != null and param1.qq !=''">
				and t.qq = #{param1.qq}
			</if>
			<if test="param1.weChat != null and param1.weChat !=''">
				and t.weChat = #{param1.weChat}
			</if>
			<if test="param1.type != null and param1.type !=''">
				and t.type = #{param1.type}
			</if>
			<if test="param1.nickName != null and param1.nickName != ''">
				and t.nickName = #{param1.nickName}
			</if>
		order by t.lastUpdatedDate desc
		limit #{param2}, #{param3}
	</select>
	
	<!-- 
	 * 批量添加 user 
	 * liaoyun
	 * 2016-3-26
	 * @param insertedRecords
	 -->
	<insert id="batchInsertUser">
		<foreach collection="list" item="item">
			insert into user_t (
				account,
				tel,
				email,
				qq,
				weChat,
				password,
				leader,
				type,
				nickName,
				createdBy,
				creationDate,
				lastUpdatedBy,
				lastUpdatedDate
			)values(
				#{item.account},
				#{item.tel},
				#{item.email},
				#{item.qq},
				#{item.weChat},
				#{item.password},
				#{item.leader},
				#{item.type},
				#{item.nickName},
				#{item.createdBy},
				now(),
				#{item.lastUpdatedBy},
				now()
			);
		</foreach>
	</insert>
	<!-- 
	 * 批量修改 user 
	 * liaoyun
	 * 2016-3-26
	 * @param updatedRecords
	 -->
	<update id="batchUpdateUser">
		<foreach collection="list" item="item">
			update 
				user_t
			set
				account         = #{item.account},
				tel             = #{item.tel},
				email           = #{item.email},
				qq              = #{item.qq},
				weChat          = #{item.weChat},
				leader          = #{item.leader},
				type            = #{item.type},
				nickName        = #{item.nickName},
				lastUpdatedBy   = #{item.lastUpdatedBy},
				lastUpdatedDate = now()
			where
				id = #{item.id};
		</foreach>
	</update>
	<!-- 
	 * 批量删除 user 
	 * liaoyun
	 * 2016-3-26
	 * @param insertedRecords
	 -->
	<delete id="batchDeleteUser">
		delete from user_t where id in
		<foreach collection="list" item="item" open="(" separator="," close=")">
			#{item.id}
		</foreach>
	</delete>
	<!-- 
	*查询  该角色的 权限 code liaoyun 2016-3-27
	 -->
	<select id="findPriCodeByType" resultType="String">
		select 
			privilegeCode
		from
			user_privilege_t
		where
			roleCode=#{0}
	</select>
	<!-- 
	 * 查询 该角色拥有的  页面 liaoyun 2016-3-27
	 * @param list
	 -->
	<select id="findPriPageList" resultType="ssm.entity.privilege.PrivilegeO">
		select
			t.description as priDesc,
			t.url         as PriUrl
		from
			privilege_t t
		where
			t.type='1'
			and t.code in
			<foreach collection="list" item="item" open="(" separator="," close=")">
				#{item}
			</foreach>
	</select>
	<!-- 
	 * 查询新添加的用户是否重复
	 * liaoyun 2016-4-3
	 * @param insertedRecords
	 -->
	<select id="findInsertUserRepeat" resultType="String">
		select
			account
		from
			user_t
		where 
			account in
			<foreach collection="list" item="item" open="(" separator="," close=")">
				#{item.account}
			</foreach>
	</select>
	<!-- 
	 * 查询 修改用户 是否重复
	 * liaoyun 2016-4-3
	 * @param updatedRecords
	 -->
	<select id="findUpdateUserRepeat" resultType="String">
		<foreach collection="list" item="item">
			select
				account
			from
				user_t
			where
				account=#{item.account} and id!=#{item.id}
		</foreach>
	</select>
</mapper>


